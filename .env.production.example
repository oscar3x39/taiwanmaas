# 🤖 AI-Optimized Production Environment Configuration
# 📝 生產環境專用配置檔案
# 
# 🚀 生產環境特色：
# ✅ 安全性和效能優化
# ✅ 監控和日誌配置
# ✅ 高可用性設定
# ✅ 資源管理和限制

# ===========================================
# 🗝️ API Keys and External Services
# ===========================================
GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key_here

# ===========================================
# 🚀 Application Configuration
# ===========================================
NODE_ENV=production
BUILD_TARGET=production

# ===========================================
# 🌐 Network and Ports
# ===========================================
BACKEND_PORT=3000
FRONTEND_PORT=8080
REDIS_PORT=6379

# ===========================================
# 🔗 Service URLs
# ===========================================
VUE_APP_API_URL=https://your-domain.com/api
VUE_APP_GOOGLE_MAPS_API_KEY=your_production_google_maps_api_key_here
REDIS_URL=redis://redis:6379

# ===========================================
# 📊 Logging and Monitoring
# ===========================================
LOG_LEVEL=warn
DEBUG=

# ===========================================
# 🔒 Security Configuration
# ===========================================
JWT_SECRET=your_super_secure_jwt_secret_for_production_change_this
REDIS_PASSWORD=your_secure_redis_password_change_this
CORS_ORIGIN=https://your-domain.com
SESSION_SECRET=your_super_secure_session_secret_for_production_change_this

# ===========================================
# 🐳 Docker Configuration
# ===========================================
TZ=Asia/Taipei

# ===========================================
# 🧪 Testing Configuration (Disabled in Production)
# ===========================================
# TEST_DATABASE_URL=
# TEST_REDIS_URL=

# ===========================================
# 📈 Performance Configuration
# ===========================================
CACHE_TTL=7200
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
REDIS_MAX_MEMORY=512mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# ===========================================
# 🌍 Deployment Configuration
# ===========================================
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key_for_production
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_for_production

# ===========================================
# 📧 Email Configuration (Optional)
# ===========================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# ===========================================
# 📊 Analytics and Monitoring (Optional)
# ===========================================
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# SENTRY_DSN=your_sentry_dsn_for_error_tracking